" basic vim configs

set history=700

filetype plugin on
filetype indent on

set autoread

set mouse=a
set so=7
set ruler
set cmdheight=2
set number
set hid
set backspace=eol,start,indent
set whichwrap+=<,>,h,l
set ignorecase
set smartcase
set hlsearch
set incsearch
set lazyredraw
set magic
set showmatch
set mat=2
set noerrorbells

syntax enable
colorscheme desert
set background=dark
set encoding=utf8
set ffs=unix,dos,mac

set expandtab

set shiftwidth=4
set tabstop=4

set lbr
set tw=500

set ai
set si
set wrap

map j gj
map k gk
